<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<!-- TextView displaying big digits -->
<TextView
android:id="@+id/countView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/naderss"
android:textSize="150sp"
android:text="00"
android:layout_centerHorizontal="true"
android:layout_alignParentTop="true"
android:layout_marginTop="32dp" />

<!-- First FloatingActionButton (FAB1) -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/play"
android:layout_alignParentBottom="true"
android:layout_alignParentEnd="true"
android:layout_alignParentRight="true"
android:layout_marginEnd="16dp"
app:fabSize="normal" />

<!-- Second FloatingActionButton (FAB2) -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/cog"
android:layout_toStartOf="@id/fab1"
android:layout_toLeftOf="@id/fab1"
android:layout_alignBottom="@id/fab1"
android:layout_marginEnd="16dp"
app:fabSize="normal" />

<!-- Third FloatingActionButton (FAB3) -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/cnader"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/contact"
android:layout_toStartOf="@id/fab2"
android:layout_toLeftOf="@id/fab2"
android:layout_alignBottom="@id/fab2"
android:layout_marginEnd="16dp"
app:fabSize="normal" />

</RelativeLayout>